<script>
$(document).ready(function(){
  $("#uid").blur(function(){
    var id=$("#uid").val();
//    alert(id)

    $.ajax({
      url:  'Checkuserid',
      data:"uid="+id,
      type:'get',
      success:function(response)
      {
  //      alert(response)
        if(response.msg=="Already Exist")
        $("#uid").val("");
        $("#errmsg").html(id+" "+response.msg);
        }
     }); //AJAX end
  }); //blur end
}); //ready end
</script>

