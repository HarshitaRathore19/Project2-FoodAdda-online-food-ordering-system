<div class="container">
  <h2>View Order History</h2>           
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Image</th>
        <th>Order id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
        <th>Customer</th>
        <th>Address</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      {{#each orders}}
      <tr>
        <td>{{#each data}}<img src="{{this.imagename}}" height="50" width="50"></td>
        {{/each}}
        <td>{{this._id}}</td>
        <td>{{this.name}}</td>
        <td>{{this.price}}</td>
        <td>{{this.quantity}}</td>
        <td>{{this.total}}</td>
        <td>{{this.user}}</td>
        <td>{{this.address}}</td>
        <td>{{this.status}}</td>
        <!--td><a href="dispatch?id={{this._id}}" onclick= "return confirm('Do you really want to dispatch this order ?')">Dispatch</a> </td-->
      </tr>
      {{/each}}
    </tbody>  </table>
</div>
